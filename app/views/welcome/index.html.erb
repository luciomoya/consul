          <%= image_tag(image_path_for('Propones.png'), class: 'hide-for-small-only', size: '168x168') %>
          <h2><%= t("welcome.proposal.title") %></h2>
          <p><%= t("welcome.proposal.description") %></p>
        </div>
        <div class="small-12 medium-3 column">
        <!-- <img alt="" title="CREACIÓN" src="https://baelige.buenosaires.gob.ar/assets/icon_home_proposal-3057b6ea01ca70cd36905c0b1dc3323750012e07fd156dd03750343b933bb283.png" width="168" height="168"> -->
          <%= image_tag(image_path_for('Decides.png'), class: 'hide-for-small-only', size: '168x168') %>
          <h2><%= t("welcome.decide.title") %></h2>
          <p><%= t("welcome.decide.description") %></p>
        </div>
        <div class="small-12 medium-3 column">
        <!-- <img alt="" title="CREACIÓN" src="https://baelige.buenosaires.gob.ar/assets/icon_home_proposal-3057b6ea01ca70cd36905c0b1dc3323750012e07fd156dd03750343b933bb283.png" width="168" height="168"> -->
          <%= image_tag(image_path_for('sehace.png'), class: 'hide-for-small-only', size: '168x168') %>
          <h2><%= t("welcome.do.title") %></h2>
          <p><%= t("welcome.do.description") %></p>
        </div>
      </div>
    </div>
  </main>
<% end %>

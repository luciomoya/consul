    <div class="small-12 column text-center">
      <div class="row margin padding">
        <div class="small-12 medium-3 column">
          <%= image_tag(image_path_for('Debates.png'), class: 'hide-for-small-only', size: '168x168') %>
          <h2><%= t("welcome.debates.title") %></h2>
          <p><%= t("welcome.debates.description") %></p>
        </div>
        <div class="small-12 medium-3 column">
      <!--  <%= image_tag(image_path_for('logo_header.png'), class: 'hide-for-small-only', size: '400x80', alt: t("layouts.header.logo")) %> -->
